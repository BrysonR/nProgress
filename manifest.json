{
    "manifest_version": 2,
    "name": "nProgress",
    "description": "This extension takes a screenshot on load of a specific site and sends it to a server.",
    "version": "1.0",
    "content_scripts": [{
        "matches": ["*localhost*"],
        "js": ["jquery.js", "content.js"]
    }],
    "browser_action": {
      "default_icon": "nProgress_icon.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "*localhost*",
        "<all_urls>"
    ]
}
